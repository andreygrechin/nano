<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{/device}</name>
            <config>
                <ip xmlns="urn:ios">
                    <name-server>
                        <name-server-list>
                            <address>{$name-server}</address>
                        </name-server-list>
                    </name-server>
                    <domain>
                        <list>
                            <name>{$domain-list}</name>
                        </list>
                        <lookup-conf>
                            <lookup>{$domain-name-lookup}</lookup>
                        </lookup-conf>
                        <name>{$domain-name}</name>
                    </domain>
                </ip>
            </config>
        </device>
    </devices>
</config-template>
